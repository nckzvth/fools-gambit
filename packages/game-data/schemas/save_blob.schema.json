{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://foolsgambit.dev/schemas/save_blob.schema.json",
  "title": "Fool's Gambit - Save Blob",
  "type": "object",
  "additionalProperties": false,
  "required": ["header", "seed", "runConfig", "rngState", "state", "actionLog"],
  "properties": {
    "header": { "$ref": "#/$defs/Header" },
    "seed": { "type": "integer" },
    "runConfig": {
      "type": "object",
      "additionalProperties": false,
      "required": ["runLengthTarget", "fateCap"],
      "properties": {
        "runLengthTarget": { "type": "integer", "enum": [7, 14, 21] },
        "fateCap": { "type": "integer", "const": 10 }
      }
    },
    "rngState": {
      "type": "object",
      "additionalProperties": false,
      "required": ["algorithm", "state"],
      "properties": {
        "algorithm": { "type": "string", "enum": ["xorshift32"] },
        "state": {
          "type": "integer",
          "minimum": 0,
          "maximum": 4294967295,
          "description": "Internal 32-bit RNG state after the last consumed RNG operation."
        }
      }
    },
    "state": {
      "type": "object",
      "description": "Canonical RunState. Schema intentionally left loose here; validate via runtime validator + invariants in game-core.",
      "additionalProperties": true
    },
    "actionLog": {
      "type": "array",
      "items": { "$ref": "#/$defs/Action" }
    },
    "createdAtUTC": {
      "type": "string",
      "format": "date-time",
      "description": "Optional convenience timestamp; excluded from parity hashes."
    },
    "checksum": {
      "type": "string",
      "description": "Optional integrity hash; excluded from parity hashes."
    }
  },
  "$defs": {
    "Header": {
      "type": "object",
      "additionalProperties": false,
      "required": ["engineVersion", "contentVersion", "saveVersion", "specVersion"],
      "properties": {
        "engineVersion": { "type": "string" },
        "contentVersion": { "type": "string" },
        "saveVersion": { "type": "integer", "minimum": 1 },
        "specVersion": { "type": "string", "const": "v1.1" }
      }
    },

    "ActionType": {
      "type": "string",
      "enum": [
        "START_RUN",
        "START_FLOOR",
        "SELECT_ATTUNEMENT",

        "CHOOSE_FLEE",
        "CHOOSE_ENGAGE",
        "SELECT_CARRIED_CARD",

        "USE_LEAP_OF_FAITH",
        "SPEND_FATE_REROLL",
        "SPEND_FATE_CLEANSE",
        "SPEND_FATE_EXILE_REPLACE",
        "SPEND_FATE_CHEAT_WEAPON",

        "USE_SPELL_CLEANSE",
        "USE_SPELL_REROLL",
        "USE_MAJOR_GIFT",

        "COMMIT_RESOLVE",

        "ACE_CHOICE",
        "ENEMY_FIGHT_CHOICE",
        "SWORDS_AMBUSH_BLOCK_CHOICE",
        "CUPS_8_10_CHOICE",
        "BARGAIN_CHOICE"
      ]
    },

    "Action": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type"],
      "properties": {
        "type": { "$ref": "#/$defs/ActionType" },

        "slotIndex": { "type": "integer", "minimum": 0, "maximum": 3 },

        "majorIds": {
          "type": "array",
          "items": { "type": "string" },
          "maxItems": 3
        },
        "majorId": { "type": "string" },

        "choice": {
          "type": "string",
          "description": "Generic choice field for small enumerations (e.g., 'pay', 'takeDamage', 'heal', 'equipArmor')."
        },

        "mode": {
          "type": "string",
          "description": "Combat mode or sub-mode (e.g., 'barehand', 'weapon')."
        }
      }
    }
  }
}
